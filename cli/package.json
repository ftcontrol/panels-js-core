{
  "name": "ftc-panels",
  "description": "Library for Panels' plugin system.",
  "author": {
    "name": "Lazar",
    "email": "hi@bylazar.com",
    "url": "https://bylazar.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ftcontrol/panels-js-core.git"
  },
  "type": "module",
  "version": "1.1.25",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "create-panels-plugin": "./cli/bin/create.ts"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "import": "./dist/cli/index.js"
    },
    "./docs": {
      "types": "./dist/docs.d.ts",
      "import": "./dist/docs.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json && node scripts/copy-core.mjs",
    "clean": "rm -rf dist",
    "prepack": "bun run clean && bun run build",
    "prepublishOnly": "bun run build",
    "dev": "tsc -w -p tsconfig.json"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@sveltejs/vite-plugin-svelte": "^5.1.0",
    "@types/fs-extra": "^11.0.4",
    "@types/xmldom": "^0.1.34",
    "chalk": "^5.4.1",
    "chokidar": "^4.0.3",
    "commander": "^14.0.0",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.0",
    "highlight.js": "^11.11.1",
    "inquirer": "^12.6.3",
    "juice": "^11.0.1",
    "node-fetch": "^3.3.2",
    "replace-in-file": "^8.3.0",
    "sirv": "^3.0.1",
    "svelte": "^5.38.1",
    "svelte-portal": "^2.2.1",
    "vite": "^7.0.3",
    "xmldom": "^0.6.0"
  }
}
