{
  "name": "ftc-panels",
  "description": "Library for Panels' plugin system.",
  "version": "1.1.43",
  "author": {
    "name": "Lazar",
    "email": "hi@bylazar.com",
    "url": "https://bylazar.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ftcontrol/panels-js-core.git"
  },
  "scripts": {
    "dev": "vite dev",
    "build": "vite build && bun run prepack",
    "preview": "vite preview",
    "prepare": "bunx svelte-kit sync || echo ''",
    "prepack": "bunx svelte-kit sync && bunx svelte-package && bunx publint",
    "check": "bunx svelte-kit sync && bunx svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "bunx svelte-kit sync && bunx svelte-check --tsconfig ./tsconfig.json --watch",
    "prepublishOnly": "bun run build"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/core/index.d.ts",
      "svelte": "./dist/core/index.js",
      "default": "./dist/core/index.js"
    },
    "./docs": {
      "types": "./dist/docs/index.d.ts",
      "svelte": "./dist/docs/index.js",
      "default": "./dist/docs/index.js"
    },
    "./cli": {
      "types": "./dist/cli/index.d.ts",
      "default": "./dist/cli/index.js"
    }
  },
  "peerDependencies": {
    "svelte": "^5.0.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^6.0.0",
    "@sveltejs/kit": "^2.22.0",
    "@sveltejs/package": "^2.0.0",
    "@types/node": "^24.3.0",
    "publint": "^0.3.2",
    "svelte": "^5.0.0",
    "svelte-check": "^4.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "svelte"
  ],
  "dependencies": {
    "@sveltejs/vite-plugin-svelte": "^6.0.0",
    "chokidar": "^4.0.3",
    "path": "^0.12.7",
    "svelte-portal": "^2.2.1",
    "vite": "^7.0.4",
    "zlib": "^1.0.5"
  }
}
